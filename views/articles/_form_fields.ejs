<div class="form-group">
  <label for="title">Title</label>
  <input
    required
    value="<%= article.title %>"
    type="text"
    name="title"
    id="title"
    placeholder="Enter title"
    class="form-control"
  />
</div>
<div class="form-group">
  <label for="description">Description</label>
  <textarea
    name="description"
    id="description"
    placeholder="Enter description"
    class="form-control"
  >
<%= article.description %></textarea
  >
</div>
<div class="form-group">
  <label for="markdown">Markdown</label>
  <textarea
    required
    name="markdown"
    id="markdown"
    placeholder="Enter markdown...Eg: #Title and description"
    class="form-control"
  >
<%= article.markdown %></textarea
  >
</div>

<a href="/" class="btn btn-secondary mr-3 btn-sm">Cancel</a>
<button type="submit" class="btn btn-primary btn-sm">Save</button>
